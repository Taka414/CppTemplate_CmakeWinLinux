{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug MyProject",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/debug/MyExecutableName",
            "environment": [],
            "args": [],
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "preLaunchTask": "build",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}