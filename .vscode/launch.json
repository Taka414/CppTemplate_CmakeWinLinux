{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug MyProject",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/debug/MyExecutableName", // デバッグビルドの実行ファイル
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build", // ビルドタスクを指定
            "miDebuggerPath": "/usr/bin/gdb", // GDBのパスを指定
            "logging": {
                "trace": true,
                "traceResponse": true,
                "engineLogging": true
            }
        }
    ]
}